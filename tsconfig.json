{
  "compilerOptions": {
    "rootDir": "./",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "DOM"],
    "declaration": true,
    "strict": true,
    "outDir": ".build",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "preserveConstEnums": true
  },
  "include": ["src/**/*.*"],
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts",
    "**/*.d.ts",
    "src/node_modules/!(@open-wc)",
    "src/capacitor.js",
    "**/*.test.ts",
    "node_modules/**/*.*"
  ],
  "assets": ["src/**/*.pug"]
}
